{
  "name": "rebuzzle-monorepo",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean && rm -rf node_modules",
    "dev:web": "pnpm --filter @rebuzzle/web dev",
    "dev:desktop": "pnpm --filter @rebuzzle/desktop dev",
    "dev:mobile": "pnpm --filter @rebuzzle/mobile dev",
    "build:web": "pnpm --filter @rebuzzle/web build",
    "build:desktop": "pnpm --filter @rebuzzle/desktop build",
    "build:mobile": "pnpm --filter @rebuzzle/mobile build"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "@biomejs/biome": "^2.2.6",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "*",
        "@types/react": "*"
      },
      "ignoreMissing": [
        "react",
        "react-dom",
        "@types/react"
      ]
    }
  }
}
