{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "entry": [
    "src/app/**/*.{ts,tsx}",
    "src/app/layout.tsx",
    "src/app/page.tsx",
    "next.config.mjs",
    "postcss.config.mjs",
    "tailwind.config.ts"
  ],
  "project": ["src/**/*.{ts,tsx}", "scripts/**/*.{ts,js}", "emails/**/*.tsx"],
  "ignore": [
    "**/*.d.ts",
    "**/*.config.{js,ts,mjs}",
    "**/node_modules/**",
    ".next/**",
    "dist/**",
    "build/**"
  ],
  "ignoreDependencies": [
    "autoprefixer",
    "postcss",
    "tailwindcss",
    "@types/node",
    "@types/react",
    "@types/react-dom",
    "@types/canvas-confetti",
    "@types/web-push"
  ],
  "workspaces": {
    ".": {
      "entry": ["src/app/**/*.{ts,tsx}", "next.config.mjs"],
      "project": [
        "src/**/*.{ts,tsx}",
        "scripts/**/*.{ts,js}",
        "emails/**/*.tsx"
      ]
    }
  },
  "next": {
    "entry": [
      "src/app/**/{page,layout,loading,error,not-found,global-error,route,default}.{js,ts,tsx}",
      "src/app/**/route.{js,ts,tsx}",
      "src/middleware.{js,ts}",
      "src/instrumentation.{js,ts}"
    ]
  }
}
